{
    "name":                 "splash/akeneo-bundle",
    "description":          "Splash Bundle for Akeneo PIM Solution",
    "type":                 "symfony-bundle",
    "license":              "MIT",
    "minimum-stability":    "dev",
    "prefer-stable":        true,
    "authors": [
        {
            "name": "Splash Sync",
            "homepage": "http://www.splashsync.com"
        },
        {
            "name": "BadPixxel",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { 
             "Splash\\Akeneo\\":     "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Splash\\Tests\\": "tests"
        }
    },
    "require": {
        "php":                                          "^7.4|^8.0",
        "splash/php-bundle":                            "^2.0.0",
        "akeneo/pim-community-dev":                     "^6.0|^7.0"
    },
    "require-dev": {
        "splash/console":                               "dev-master",
        "badpixxel/php-sdk":                            "^2.0"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    }
}
